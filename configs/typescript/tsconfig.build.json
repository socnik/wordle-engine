{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["../../src/**/*"],
  "exclude": ["../../src/**/*.test.ts"],
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "isolatedModules": false,
    "types": ["vite/client"],
    "outDir": "../../.tmp/build",
    "rootDir": "../../src",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
